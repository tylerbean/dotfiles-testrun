package_maximbaz-x86_64() {
    depends=(
        # temporary - does not work in ARM
        'shellcheck'

        # base
        'linux'
        'linux-headers'

        # arch
        'devtools'
        'reflector'

        # boot
        'arch-secure-boot'
        'intel-ucode'
        'terminus-font'

        # virtual machines
        'libvirt'
        'virt-manager'
        'qemu'
        'dnsmasq'
        'ebtables'
        'edk2-ovmf'

        # hardware
        'dell-command-configure'
        'intel-media-driver'
        'vulkan-intel'
        'vulkan-headers'
        'wluma'
        'iriunwebcam-bin'
    )
}

package_maximbaz-aarch64() {
    depends=(
        # base
        'linux-asahi'
        'linux-asahi-edge'
        'linux-asahi-headers'

        # arch
        'devtools-alarm'
        'archlinuxarm-keyring'
        'asahi-meta'

    )
}
